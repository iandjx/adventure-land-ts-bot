  "author": "Ian de Jesus <ian@eskwelabs.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "NODE_PATH=./src nodemon ./src/index.ts",
